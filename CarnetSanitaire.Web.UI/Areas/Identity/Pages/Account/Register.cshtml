@page
@model RegisterModel
@{
    ViewData["Title"] = "S'enregistrer";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="red-text text-darken-4"></div>
            <div class="form-group">
                <label asp-for="Input.Nom"></label>
                <input asp-for="Input.Nom" class="form-control" />
                <span asp-validation-for="Input.Nom" class="red-text text-darken-4"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Prenom"></label>
                <input asp-for="Input.Prenom" class="form-control" />
                <span asp-validation-for="Input.Prenom" class="red-text text-darken-4"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Matricule"></label>
                <input asp-for="Input.Matricule" class="form-control" />
                <span asp-validation-for="Input.Matricule" class="red-text text-darken-4"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="red-text text-darken-4"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="red-text text-darken-4"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="red-text text-darken-4"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
