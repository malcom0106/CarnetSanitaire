@model IEnumerable<CarnetSanitaire.Web.UI.Models.PointReleveTemperature>

@{
    ViewData["Title"] = "Temperature";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Points de relevé de température</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localisation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypePoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localisation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypePoint.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                <a asp-action="EditPoint" asp-route-id="@item.Id" class="px-2"><i class="far fa-edit"></i></a>
                <a asp-action="DetailsPoint" asp-route-id="@item.Id" class="px-2"><i class="fas fa-info"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="row col-12">
    <a asp-action="CreatePoint" class="btn btn-outline-success col-12">Nouveau Point</a>
</div>
