@model CarnetSanitaire.Web.UI.Models.ReleveTemperature

@{
    ViewData["Title"] = "CreateReleve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateReleve</h1>

<h4>ReleveTemperature</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReleve">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateReleve" class="control-label"></label>
                <input asp-for="DateReleve" readonly class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="DateReleve" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temperature" class="control-label"></label>
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Statut" checked readonly/> 
                </label>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

