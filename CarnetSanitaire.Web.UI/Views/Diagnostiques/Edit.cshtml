@model CarnetSanitaire.Web.UI.Models.Diagnostique

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Diagnostique</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="InstallationId"/>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Diagnostique_Realise" /> @Html.DisplayNameFor(model => model.Diagnostique_Realise)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostique_Date" class="control-label"></label>
                <input asp-for="Diagnostique_Date" class="form-control" />
                <span asp-validation-for="Diagnostique_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostique_Intervenant" class="control-label"></label>
                <input asp-for="Diagnostique_Intervenant" class="form-control" />
                <span asp-validation-for="Diagnostique_Intervenant" class="text-danger"></span>
            </div>
            <div class="row col-12 form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary col-12 col-md-6" />
                <a asp-action="Index" class="btn btn-outline-danger col-12 col-md-6">Retour</a>
            </div>
        </form>
    </div>
</div>

