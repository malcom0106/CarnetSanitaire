@model CarnetSanitaire.Web.UI.Models.Diagnostique

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Diagnostique</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Diagnostique_Realise" /> @Html.DisplayNameFor(model => model.Diagnostique_Realise)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostique_Date" class="control-label"></label>
                <input asp-for="Diagnostique_Date" class="form-control" />
                <span asp-validation-for="Diagnostique_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostique_Intervenant" class="control-label"></label>
                <input asp-for="Diagnostique_Intervenant" class="form-control" />
                <span asp-validation-for="Diagnostique_Intervenant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstallationId" class="control-label"></label>
                <select asp-for="InstallationId" class="form-control" asp-items="ViewBag.InstallationId"></select>
                <span asp-validation-for="InstallationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
