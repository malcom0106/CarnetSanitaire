@model IEnumerable<CarnetSanitaire.Web.UI.Models.Personnel>

@{
    ViewData["Title"] = "Index";
    int SocieteId = (int)ViewBag.SocieteId;
}

<h1>@ViewBag.Societe</h1>

<table class="table" id="personneltable">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="ChangeStatut" asp-controller="Personnels" asp-route-idPersonnel="@item.Id" asp-route-idSociete="@item.SocieteId">
                        @if (item.Statut)
                        {
                            <i class="fas fa-check" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fas fa-times" style="color:red"></i>
                        }
                    </a> 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="mx-2"><i class="fas fa-user-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="mx-2"><i class="fas fa-info"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <a asp-action="Create" asp-route-id="@SocieteId" class="col-12 btn btn-outline-success">Nouvelle Personne</a>
</div>


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#personneltable').DataTable();
        });


    </script>
}
